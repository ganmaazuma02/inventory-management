<div class="row">
    <div class="col-md-12">
        <button class="btn btn-primary" data-toggle="modal" id="btnOpenAddItemModal">Add Item</button>
        <h5 id="selectedItem"></h5>
        <div class="row">
            <div class="col-md-2">
                Page Size:
                <select onchange="onPageSizeChanged()" id="page-size">
                    <option value="10" selected>10</option>
                    <option value="100">100</option>
                    <option value="500">500</option>
                    <option value="1000">1000</option>
                </select>
                <input class="form-control" oninput="onFilterTextBoxChanged()" id="gridQuickFilter" placeholder="Quick Filter" />
            </div>
        </div>

        <div style="height: 540px; width:1200px;" id="myGrid" class="ag-theme-alpine"></div>
    </div>
</div>

<div id="notiToast" data-delay="2000" class="toast" style="position: absolute; top: 50px; right: 100px;">
    <div class="toast-header">
        <strong class="mr-auto" id="toastTitle"></strong>
        <button id="btnCloseModal" type="button" class="ml-2 mb-1 close" data-dismiss="toast">&times;</button>
    </div>
    <div class="toast-body" id="toastContent">
    </div>
</div>

<div class="modal fade" id="addItemModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form method="post" action="" enctype="multipart/form-data" id="myform">
                            <div class='preview'>
                                <img src="" id="itemImagePreview" width="300" height="300">
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Item Image</label>
                                        <input type="file" id="file" name="file" class="form-control-file" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="text-center mt-4">
                                        <input type="button" class="btn btn-success" value="Upload" id="btnUploadImage">
                                    </div>
                                </div>                          
                            </div>
                        </form>
                        <form>
                            <div class="text-danger"></div>
                            <input type="hidden" id="itemId" />
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label class="control-label">Item Name</label>
                                        <div class="input-group">
                                            <input id="itemName" class="form-control" />
                                        </div>
                                        <span id="itemNameErr" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label">Quantity</label>
                                        <div class="input-group">
                                            <input id="itemQuantity" type="number" class="form-control" />
                                        </div>
                                        <span id="itemQuantityErr" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Item Description</label>
                                        <div class="input-group">
                                            <textarea id="itemDesc" class="form-control"></textarea>
                                        </div>
                                        <span id="itemDescErr" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnAddItem" type="button" class="btn btn-primary"></button>
                <button id="addItemLoading" class="btn btn-primary" type="button" disabled style="display: none;">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Adding Item...
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteItemModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="deleteItemId" />
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" id="btnDeleteItem" class="btn btn-primary">Yes</button>
            </div>
        </div>
    </div>
</div>

{{#section 'script'}}
<script src="js/items.js"></script>
{{/section}}